<view class="serach_row">
  <input type="text" model:value="{{inputValue}}" placeholder="请输入商品关键字" bindinput="handleInput" />
  <button bindtap="handleCancel" hidden="{{!isFocus}}">取消</button>
</view>
<view class="search_content">
  <navigator class="search_item" wx:for="{{productList}}" wx:key="id" url="/pages/product_detail/index?id={{item.id}}">
    {{item.name}}</navigator>
</view>